@model IEnumerable<BLL.DTO.UserStudyGroups>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppUser!.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudyGroups)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleWithinGroup!.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser!.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudyGroups!.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleWithinGroup!.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
